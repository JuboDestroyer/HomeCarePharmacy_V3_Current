@page "/consultationsIndex/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager
@using HomeCarePharmacy_Project.Client.Static;
@using HomeCarePharmacy_V3.Shared.Domain;

<h3>View</h3>

<FormComponent consultation="consultation" Disabled="true" />

@code {
    [Parameter] public int id { get; set; }
    Consultation? consultation = new Consultation();

    protected async override Task OnParametersSetAsync()
    {
        consultation = await _client.GetFromJsonAsync<Consultation>($"{Endpoints.ConsultationsEndpoint}/{id}");
    }
}   