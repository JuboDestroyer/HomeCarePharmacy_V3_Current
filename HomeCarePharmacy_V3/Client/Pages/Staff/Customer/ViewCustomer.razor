@page "/customerIndex/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager
@using HomeCarePharmacy_Project.Client.Static;
@using HomeCarePharmacy_V3.Shared.Domain;

<h3>View</h3>

<FormComponent customer="customer" Disabled="true" />

@code {
    [Parameter] public int id { get; set; }
    Customer? customer = new Customer();

    protected async override Task OnParametersSetAsync()
    {
        customer = await _client.GetFromJsonAsync<Customer>($"{Endpoints.CustomersEndpoint}/{id}");
    }
}   