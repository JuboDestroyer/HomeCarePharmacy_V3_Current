@page "/staffIndex/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager
@using HomeCarePharmacy_Project.Client.Static;
@using HomeCarePharmacy_V3.Shared.Domain;

<h3>View</h3>

<FormComponent staff="staff" Disabled="true" />

@code {
    [Parameter] public int id { get; set; }
    Staff? staff = new Staff();

    protected async override Task OnParametersSetAsync()
    {
        staff = await _client.GetFromJsonAsync<Staff>($"{Endpoints.StaffsEndpoint}/{id}");
    }
}   